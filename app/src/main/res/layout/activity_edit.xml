<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/registerToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/toolbar"/>
    </LinearLayout>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="35dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/simageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:paddingBottom="30dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        app:civ_fill_color="@color/blue"
        android:src="@drawable/baseline_person_24"
        android:tint="@color/grey"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_weight="1"
            android:gravity="top|center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="\n\n*"
            android:lineSpacingExtra="21dp"
            android:textColor="@color/red"
            android:textSize="25sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="15dp">
            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center">

                <EditText
                    android:id="@+id/seditTextName"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:hint="이름"/>
                <View
                    android:layout_width="250dp"
                    android:layout_height="0.8dp"
                    android:background="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"/>
            </FrameLayout>


            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:text="ID     |     "
                    android:gravity="center_vertical"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/suserid_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text=""
                    android:gravity="center_vertical"
                    android:textSize="16sp"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center">
                <EditText
                    android:id="@+id/seditTextPassword"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:hint="Original Password"/>
                <ImageButton
                    android:id="@+id/sshowbutton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:background="#00ff0000"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:src="@drawable/hide"/>

                <View
                    android:layout_width="250dp"
                    android:layout_height="0.8dp"
                    android:background="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center">
                <EditText
                    android:id="@+id/seditNewPassword"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:hint="New Password"/>
                <ImageButton
                    android:id="@+id/sshowbutton2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:background="#00ff0000"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:src="@drawable/hide"/>

                <View
                    android:layout_width="250dp"
                    android:layout_height="0.8dp"
                    android:background="@color/black"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"/>
            </FrameLayout>



            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="성별"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/savedGender"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="성별"
                    android:textSize="15sp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="기숙사"
                    android:textSize="15sp"/>
                <Spinner
                    android:id="@+id/sspinnerDorm"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="저장"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:backgroundTint="@color/blue"
        android:padding="0dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

</LinearLayout>